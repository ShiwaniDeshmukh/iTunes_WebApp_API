@{
    ViewData["Title"] = "iTunes Store";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - iTunes</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Add custom CSS styles for the iTunes store page */
        .container {
            margin: 20px auto;
            max-width: 800px;
            text-align: center;
        }

        h1 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        p {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .search-form {
            margin-bottom: 20px;
        }

        .search-input {
            width: 300px;
            height: 30px;
            padding: 5px;
            font-size: 14px;
        }

        .search-button {
            height: 30px;
            padding: 5px 10px;
            font-size: 14px;
        }

        .search-results {
            text-align: left;
        }

        .album {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .album-image {
            width: 100px;
            height: 100px;
            margin-right: 10px;
        }

        .album-info {
            flex-grow: 1;
        }

        .album-title {
            font-size: 18px;
            font-weight: bold;
        }

        .album-artist {
            font-size: 14px;
            color: #888;
        }

        .album-price {
            font-size: 16px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the iTunes Store</h1>
        <div class="search-form">
            <form method="post" action="@Url.Action("Search", "iTunesStore")">
                <input type="text" name="keyword" class="search-input" placeholder="Enter a keyword" required />
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>
    </div>
</body>
</html>
