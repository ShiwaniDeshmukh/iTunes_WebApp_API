@model iTunes_WebApp_API.Models.AlbumsResponse

<h1>Albums</h1>

<table>
    <thead>
        <tr>
            <th>Artwork</th>
            <th>Album</th>
            <th>Artist</th>
            <th>Release Date</th>
            <th>Price</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model.Results)
        {
            <tr>
                <td>@album.collectionName</td>
                <td>@album.artistName</td>
                <td>@album.releaseDate</td>
                <td>@album.collectionPrice</td>
                <td><img src="@album.artworkUrl100" alt="Album Artwork"></td>
                <td><a href="@album.ViewDetailsUrl">Details</a></td>
            </tr>
        }
    </tbody>
</table>
